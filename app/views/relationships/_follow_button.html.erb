<%# turbo_frame_tag(dom_id(@user)) do %>
    <% if current_user.following?(user) %>
        <%= button_to "Unfollow", unfollow_user_path(user_id: user.id), method: :delete, class: "btn btn-dark" %>
    <% else %>
        <%= button_to "Follow", follow_user_path(user_id: user.id), method: :post, class: "btn btn-primary" %>
    <% end %>
<%# end %>