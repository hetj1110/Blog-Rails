<% if notice %>
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <p class="notice"><%= notice %></p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% end %>
<div class="container mt-5">
<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-6">
                <div class="about-text go-to">
                    <h3 class="dark-color"><%= @user.fullname %></h3>
                    <% if @user == current_user %>
                    <h6 ><%= link_to 'Edit Profile', edit_user_registration_path, class: "theme-color lead" %></h6>
                    <% end %>
                    <%# <p>I <mark>design and develop</mark> services for customers of all sizes, specializing in creating stylish, modern websites, web services and online stores. My passion is to design digital user experiences through the bold interface and meaningful interactions.</p> %>
                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                <label>E-mail</label>
                                <p> <%= @user.email %> </p>
                            </div>

                            <div class="media">
                                <label>Birth Date</label>
                                <p> <%= @user.formatted_date %></p>
                            </div>
                            
                            <div class="media">
                                <label>Address</label>
                                <p><%= @user.address %></p>
                            </div>

                            <div class="media">
                                <label>Contect Number</label>
                                <p><%= @user.contact_number %></p>
                            </div>
                            
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label>Username</label>
                                <p> <%= @user.username %></p>
                            </div>

                            <div class="media">
                                <label>Age</label>
                                <p><%= @user.age %></p>
                            </div>

                            <div class="media">
                                <label>Residence</label>
                                <p><%= @user.country_name%></p>
                            </div>

                            <div class="media">
                                <label>Gender</label>
                                <p><%= @user.gender%></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-avatar">
                    <% if @user.avatar.attached? %>
                        <%= link_to image_tag(@user.avatar_as_thumbnail), @user.avatar %>
                        <% if @user == current_user %>
                            <%= link_to 'Delete Profile Picture', delete_user_avatar_path(@user), data: { turbo_method: :delete }%>
                        <% end %>
                    <% else %>
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" title="" alt="">
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>
</div>