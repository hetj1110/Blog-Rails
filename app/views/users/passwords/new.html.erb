<div class="col-lg-6 mx-lg-auto">
  <div class="card shadow">
    <div class="card-header">
      <h3 class="card-title text-center">Forgot your password?</h3>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :username_or_password, class:"mb-2"  %><br />
          <%= f.text_field :login, autofocus: true, class: "form-control form-control-lg" %>
        </div>

        <div class="actions mb-2 mt-3">
          <%= f.submit "Send me reset password instructions", class:"btn btn-dark btn-lg", data: { turbo: false }  %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
