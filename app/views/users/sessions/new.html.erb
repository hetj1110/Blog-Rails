<div class="col-lg-6 mx-lg-auto">
  <div class="card shadow">
    <div class="card-header">
      <h3 class="card-title text-center">Sign in</h3>
    </div>
    <div class="card-body">    
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :login, class:"mb-2" %><br>
          <%= f.text_field :login, class: "form-control form-control-lg" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class:"mb-2" %><br>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group mb-2 mt-2">
            <%= f.check_box :remember_me, class:"mb-2" %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions mb-2 mt-2">
          <%= f.submit "Log in", class:"btn btn-dark btn-lg", data: { turbo: false } %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>  
  </div>
</div>
