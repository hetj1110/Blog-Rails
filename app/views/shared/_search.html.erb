<style>
.search{
  display: flex;
}
</style>

<div class="container mt-2 mb-3">
    <%= form_tag(path, method: :get, class: "search" ) do %>
        <%= search_field_tag :search , params[:search], class:"form-control form-control-lg bg-transparent me-2", style: 'color: white;', placeholder: "Search Here" %>
        <%= submit_tag "Search", class:"btn btn-outline-light btn-lg px-5 mt-1 ms-2" %>
    <% end %>
</div>
