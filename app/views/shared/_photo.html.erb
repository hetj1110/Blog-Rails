<% if current_user.avatar.attached? %>
    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
      <%= image_tag(current_user.avatar_as_thumbnail, style: "display: inline-block;
                                                              width: 40px;
                                                              height: 40px;
                                                              object-fit: cover;
                                                              border-radius: 50%;") %>
    </a>
<% elsif current_user.gender == 'male'%>
    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
      <%= image_tag("male.png", style: "display: inline-block;
                                        width: 40px;
                                        height: 40px;
                                        object-fit: cover;
                                        border-radius: 50%;") %>
    </a>
<% elsif current_user.gender == 'female'%>
    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
      <%= image_tag("female.png", style: "display: inline-block;
                                          width: 40px;
                                          height: 40px;
                                          object-fit: cover;
                                          border-radius: 50%;") %>
    </a>
<% else %>
    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        <%= image_tag("unknown.jpg", style: "display: inline-block;
                                             width: 40px;
                                             height: 40px;
                                             object-fit: cover;
                                             border-radius: 50%;") %>
      </a>
<% end %>